<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/trendingHead')%>
      </head>
<body class="sBase">

    <header>
      <%- include('../partials/header')%>
    </header>
  
    <main>
      <div class="row">
        <div class="col-sm-8">
          <div class="jumbotron">
            <!-- Page to display a single profile. The "user" object is passed through from express -->
            <!-- get the first name -->
            <h1>Hi <%= user.name.first %></h1>
            <!-- get the medium picture -->
            <img src="<%= user.picture.medium %>" class="img-circle" />
            <!-- get the username -->
            <h2>Persoanl Details</h2>
            <h1>username: <br> <p> <%= user.login.username %> </p></h1>
            <h1>password: <br><p>  <%= user.login.password %></p></h1>
            <h1>
              <!-- get the gender-->
              Gender: <br><p>  <%= user.gender %></p>
            </h1>
            <h1>
              <!-- get the dob -->
              Date Of Birth: <br><p> <%= user.dob %></p>
            </h1>
            <h1>
              <!-- get the registration date-->
              Date Of Registration:<br> <p> <%= user.registered %></p>
            </h1>

          
              <!-- get the componemts of the address-->
              
             <h1> Street: <br><p>   <%= user.location.street %></p>
             </h1>
          
             
               <h1> City: <br><p>  <%= user.location.city%></p>
               </h1>

              <h1> State: <br><p>  <%= user.location.state %></p>
              </h1>

               <h1> PostCode: <br><p>  <%= user.location.postcode %></p>
               </h1>

            </ul>







          </div>
        </div>
  
        <div class="col-sm-4">
          <div class="well">
            <h3>Details</h3>
            <img src="<%= user.picture.medium %>" class="img-circle" />
            <h3>Address</h3>
            <ul>
              <!-- get the componemts of the address-->
              <li class="list-group-item">
                <%= user.location.street %>
              </li>
              <li class="list-group-item">
                <%= user.location.city%>
              </li>
              <li class="list-group-item">
                <%= user.location.state %>
              </li>
              <li class="list-group-item">
                <%= user.location.postcode %>
              </li>
            </ul>
          </div>
        </div>
  
      </div>
    </main>
  
    
  
  </body>
</html>