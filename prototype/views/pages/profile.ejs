<html lang="en">
    <head>
        <%- include('../partials/trendingHead')%>
      </head>
<body class="sBase">

    <header>
      <%- include('../partials/header')%>
    </header>
  
    <main>
      <div class="row">
        <div class="col-sm-4">
          <div class="jumbotron">
            <!-- Page to display a single profile. The "user" object is passed through from express -->
            <!-- get the first name -->

            <!-- get the medium picture -->
            <img src="<%= user.picture.medium %>" class="img-circle" />
            <!-- get the username -->
            <h1>Persoanl Details</h1>
            <br>
            <p> <%= user.login.username %> </p>

            <h2>
              <!-- get the gender-->
              Gender: <br><p>  <%= user.gender %></p>
            </h2>
            <h2>
              <!-- get the dob -->
              Date Of Birth: <br><p> <%= user.dob %></p>
            </h2>
            <h2>
              <!-- get the registration date-->
              Date Of Registration:<br> <p> <%= user.registered %></p>
            </h2>

          
              <!-- get the componemts of the address-->
              
             <h2> Street: <br><p>   <%= user.location.street %></p>
             </h2>
          
             
               <h2> City: <br><p>  <%= user.location.city%></p>
               </h2>

              <h2> State: <br><p>  <%= user.location.state %></p>
              </h2>

               <h2> PostCode: <br><p>  <%= user.location.postcode %></p>
               </h2>



               <div class="well">
                <h3>Details</h3>
                <img src="<%= user.picture.medium %>" class="img-circle" />
                <h1>Hi <%= user.name.first %></h1>
                <ul>

      
                  <!-- get the componemts of the address-->
                  <li class="list-group-item">
                    <%= user.location.street %>
                  </li>
                  <li class="list-group-item">
                    <%= user.location.city%>
                  </li>
                  <li class="list-group-item">
                    <%= user.location.state %>
                  </li>
                  <li class="list-group-item">
                    <%= user.location.postcode %>
                  </li>
                </ul>
              </div>





            </ul>
          </div>
        </div>










        <div class="col-sm-8">
  



          <div class="well">
            <h1>Hi <%= user.name.first %></h1>
            <img src="<%= user.picture.medium %>" class="img-circle" />
            <p> Home -   <%= user.location.street %> ,      <%= user.location.city%> ,  <%= user.location.state %> ,       <%= user.location.postcode %>        </p>

          </div>









