<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/trendingHead')%>
      </head>
<body class="sBase">

    <header>
      <%- include('../partials/header')%>
    </header>
  
    <main>
      <div class="row">
        <div class="col-sm-8">
          <div class="jumbotron">
            <!-- Page to display a single profile. The "user" object is passed through from express -->
            <!-- get the first name -->
            <h1>Hi <%= user.name.first %></h1>
            <!-- get the medium picture -->
            <img src="<%= user.picture.medium %>" class="img-circle" />
            <!-- get the username -->
            <h2>Persoanl Details</h2>
            <br>
            <h2>username: <br> <p> <%= user.login.username %> </p></h2>
            <h2>password: <br><p>  <%= user.login.password %></p></h2>
            <h2>
              <!-- get the gender-->
              Gender: <br><p>  <%= user.gender %></p>
            </h2>
            <h2>
              <!-- get the dob -->
              Date Of Birth: <br><p> <%= user.dob %></p>
            </h2>
            <h2>
              <!-- get the registration date-->
              Date Of Registration:<br> <p> <%= user.registered %></p>
            </h2>

          
              <!-- get the componemts of the address-->
              
             <h2> Street: <br><p>   <%= user.location.street %></p>
             </h2>
          
             
               <h2> City: <br><p>  <%= user.location.city%></p>
               </h2>

              <h2> State: <br><p>  <%= user.location.state %></p>
              </h2>

               <h2> PostCode: <br><p>  <%= user.location.postcode %></p>
               </h2>

            </ul>

          </div>
        </div>




      </div>
    </main>
  
    
  
  </body>
</html>