              <input type="password" name="password" placeholder="Password" class="First" required>
              <input type="submit" value="Login">
              <br>
              <div class="col">
                <a href="#" style="color:black" class="btn">Forgot password?</a>
              </div>
            </div>
            
          </div>
        </form>
      </div>
      
      <div class="bottom-container">
        <div class="row">


       <form action="/add">
